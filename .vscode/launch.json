    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'weid'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=weid",
                    "--package=weid"
                ],
                "filter": {
                    "name": "weid",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_MIN_STACK": "134217728",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'weid'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=weid",
                    "--package=weid"
                ],
                "filter": {
                    "name": "weid",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug in browser",
            "url": "http://172.22.149.170:8000",
            "webRoot": "${workspaceFolder}/front/src",
            "preLaunchTask": "webpack development"
        }
    ],
    "compounds": [
        {
            "name": "Server/Browser",
            "configurations": ["Debug executable 'weid'", "Debug in browser"]
        }
    ]
}